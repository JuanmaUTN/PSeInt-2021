Proceso areaYLongitudCirculo
	Definir radio Como real;
	Definir areaCirculo Como real;
	definir longCirculo Como real;
	
	Escribir 'Escriba el radio del círculo';
	Leer radio;
	
	areaCirculo <- pi * radio ^ 2;
	longCirculo <- 2 * pi * radio;
	
	Escribir 'El área del círculo es: ',areaCirculo;
	Escribir 'La longitud del círculo es: ',longCirculo;
FinProceso
